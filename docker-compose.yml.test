version: '3'
services:
  api:
    build: .
    ports:
      - "8000:8000"
    networks:
      my-network:
        aliases:
            - flask-app
    volumes:
      - ~/.local/share/golfpin:/golfpin
      - ./src:/src

  proxy:
    image: nginx
    ports:
      - 80:80
      - 443:443
    volumes:
      - ./nginx/config:/etc/nginx
      - ./nginx/certs:/etc/ssl/private
    networks:
      - my-network


networks:
    my-network:
